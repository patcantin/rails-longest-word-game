<div class="container">
<h1 class="center">New game</h1>

<div class="mixed">
  <% @letters.each do |item| %>
    <div class="item">
        <%= item.capitalize %>
    </div>
  <%end%>
</div>

<form class="form-inline justify-content-center" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letter_list, @letters %>
  <div class="form-group">
    <input type="text" class="form-control" name="answer" placeholder="Type your answer">
  </div>
  <div class="form-group">
  <button type="submit" class="btn btn-info">Play</button>
  </div>
</form>
</div>
